# 顶层标志，告诉 EditorConfig 不再递归查找更上级的 .editorconfig 文件
root = true

# 针对所有文件的默认配置
[*]
indent_style = space          # 使用空格缩进
indent_size = 2               # 缩进大小为 4
charset = utf-8               # 文件编码为 UTF-8
end_of_line = lf              # 换行符为 LF（适用于类 Unix 系统）
trim_trailing_whitespace = true  # 删除行尾的多余空格
insert_final_newline = true   # 文件末尾强制留一个空行

# 针对特定文件类型的配置
[*.md]
max_line_length = off         # Markdown 文件行宽不受限制
trim_trailing_whitespace = false  # Markdown 文件不删除行尾空格

[*.json]
indent_size = 2               # JSON 文件缩进大小为 2
